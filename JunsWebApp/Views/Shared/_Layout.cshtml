<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Jun's App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        @Html.ActionLink("Jun's App", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})

        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Score", "Search", "Score")</li>
                <li>@Html.ActionLink("Classes", "Index", "Classes")</li>
                <li>@Html.ActionLink("EFDbContext", "Index", "EF")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
</div>
<img src="~/Content/image/20171027103604.png" alt="Jun's example code'" />
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - Jun's app</p>
        <p>Best View is below</p>
        @Html.Action("BestReview", "Review")
    </footer>
</div>

@Scripts.Render("~/bundles/jun")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
